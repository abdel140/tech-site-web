{% extends 'base.html.twig' %}
{% block body %}
    {% include 'general/header.html.twig' %}
    <div class="row">
        <div class="col-lg-2">
            {% include 'general/aside.html.twig' %}
        </div>
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-12">
                    <div id="alert" class="alert alert-dismissible alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Well done!</strong> You successfully purchased your order </a>.
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
            <div>
                <h4>
                    Summary of your commande :
                </h4>
                {% if order.products is defined %}
                <table class="table">
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th></th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in order.products  %}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.price }}</td>

                            <td></td>
                        </tr>
                    {% endfor %}
                    <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total:</td>
                        <td class="text-left">{{ total }}$</td>
                    </tr>
                    </tfoot>
                    </tbody>
                </table>
                    {% else %}
                    <h4>No order defined</h4>
                {% endif %}
            </div>
            </div>
        </div>
    </div>
    <script>
        setTimeout(closeAlert,4000);
        function closeAlert(){
            $(".alert").alert("close");;
        }
    </script>
{% endblock %}