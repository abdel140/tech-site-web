{% extends 'base.html.twig' %}
{% block body %}
    {% include 'general/header.html.twig' %}
    <div class="row">
        <div class="col-lg-2">
            {% include 'general/aside.html.twig' %}
        </div>
        <div class="col-lg-10">
            <article>
                <div class="title">
                    <h1>{{ product.name }}</h1>
                </div>
                <img src="{{ product.image }}" alt="img phone">
                <h6>category: {{ product.category.id }}</h6>
                <p>{{ product.description }}</p>
                <p>{{ product.features }}</p>
                <div class="price">{{ product.price }}</div>
                <form action="{{ path("cart_addToCart",{'id_product':product.id}) }}" method="post">
                    <button type="submit" class="btn btn-success">Add to Card</button>
                </form>
            </article>
        </div>
    </div>

{% endblock %}